<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1>Cadastro</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_tag({controller: 'usuarios', action: 'create'}, method: 'post') do%>
        <div class="form-group">
          <%= label_tag(:login, 'Login') %>
          <%= text_field_tag(:login, value = nil, options = {'class' =>  'form-control'}) %>
        </div>
        <div class="form-group">
          <%= label_tag(:senha, 'Senha') %>
          <%= text_field_tag(:senha, value = nil, options = {'class' =>  'form-control', 'type' => 'password'}) %>
        </div>
        <div class="form-group">
          <%= label_tag(:confirmaSenha, 'Confirme a Senha') %>
          <%= text_field_tag(:confirmaSenha, value = nil, options = {'class' =>  'form-control', 'type' => 'password'}) %>
        </div>
        <div class="form-group">
          <%= label_tag(:nome, 'Nome Completo') %>
          <%= text_field_tag(:nome, value = nil, options = {'class' =>  'form-control'}) %>
        </div>
        <div class="form-group">
          <%= label_tag(:dataNasc, 'Data de Nascimento') %>
          <%= text_field_tag(:dataNasc, value = nil, options = {'class' =>  'form-control', 'type' => 'date'}) %>
        </div>
        <div class="form-group">
          <%= label_tag(:email, 'Email') %>
          <%= text_field_tag(:email, value = nil, options = {'class' =>  'form-control', 'type' => 'email'}) %>
        </div>
        <div class="actions">
        </div>
        <%= submit_tag %>
        </div>

    <% end %>
  </div>
</div>


<%= link_to 'Voltar', '/' %>
